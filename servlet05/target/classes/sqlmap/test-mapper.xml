<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- 
  	매퍼태그에 대한 식별자 : namespace
  	각 쿼리태그에 대한 식별자 : id
  	조회(select) 의 경우 resultType을 반환한 데이터의 타입으로 지정
   -->
<mapper namespace="test">
  <select id='select_today' resultType="java.sql.Date">
  	SELECT sysdate FROM dual
  </select>
  
  <select id='select_now' resultType='string'>
	SELECT to_char(sysdate, 'hh:mi:ss') FROM dual
	</select>
	
	<select id="user_count" resultType='integer'>
	SELECT count(*) FROM tbl_java_user
	</select>
	
	<select id="user_name" resultType="String">
	SELECT name FROM tbl_java_user WHERE id = 'user1'
	</select>
	
	<select id="user_money" resultType="integer">
	SELECT money FROM tbl_java_user WHERE id = 'user1'
	</select>
	
	<select id="user_all" resultType="String">
	SELECT name FROM tbl_java_user
	</select>
	
	<select id="user_list" resultType="dto.UserDTO">
	SELECT * FROM tbl_java_user
	</select>
	
	<select id="product_list" resultType="dto.ProductDTO">
	SELECT * FROM tbl_java_product
	</select>
	
	<select id="product_info" resultType="dto.ProductDTO">
	SELECT * FROM tbl_java_product WHERE num = #{num}
	</select>
	
</mapper>